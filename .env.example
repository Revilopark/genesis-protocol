# ============================================
# Application
# ============================================
ENVIRONMENT=development
DEBUG=true

# ============================================
# Neo4j
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=local_password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# JWT
# ============================================
JWT_SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Clever SSO (sandbox)
# ============================================
CLEVER_CLIENT_ID=your_clever_client_id
CLEVER_CLIENT_SECRET=your_clever_client_secret
CLEVER_REDIRECT_URI=http://localhost:8000/api/v1/auth/clever/callback

# ============================================
# ID.me (sandbox)
# ============================================
IDME_CLIENT_ID=your_idme_client_id
IDME_CLIENT_SECRET=your_idme_client_secret
IDME_REDIRECT_URI=http://localhost:3000/onboarding/verify/callback

# ============================================
# Google Cloud
# ============================================
GCP_PROJECT_ID=genesis-protocol-dev
GCP_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ============================================
# Google Cloud Storage (content delivery)
# ============================================
GCS_CONTENT_BUCKET=genesis-content-dev

# ============================================
# Cloudflare (optional for local)
# ============================================
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# ============================================
# CORS
# ============================================
CORS_ORIGINS=["http://localhost:3000"]

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
